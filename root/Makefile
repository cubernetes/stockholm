setup_infection:
	rm -rf ~/infection
	bash -c 'mkdir -p ~/infection/{one,two/{bla/{important,documents},deep},three/{haha/hoho}}'
	echo hi1 > ~/infection/docs.wnry
	echo hi2 > ~/infection/docs2.wncry
	echo hi3 > ~/infection/docs3.wncryt
	echo hi4 > ~/infection/docs4.wcry
	echo important > ~/infection/two/bla/documents/homework_due_tomorrow.wnry
	echo picpicpic > ~/infection/two/bla/documents/pictures_of_birthday.jpg
